                <span asp-validation-for="PrimarySuperpower" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SecondarySuperpower" class="control-label"></label>
                <input asp-for="SecondarySuperpower" class="form-control" />
